# Rocket.Chat Configuration
ROCKETCHAT_VERSION=latest
ROCKETCHAT_PORT=3000
ROOT_URL=http://localhost:3000

# Database Configuration (MongoDB)
MONGO_VERSION=5.0
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your_secure_mongodb_password_here

# Optional: Admin User Auto-Creation
# ADMIN_USERNAME=admin
# ADMIN_PASS=your_admin_password_here
# ADMIN_EMAIL=admin@yourdomain.com

# File Upload Settings
MAX_FILE_SIZE=104857600  # 100MB in bytes

# Security Settings
ENABLE_2FA=true
ENABLE_RATE_LIMITER=true

# Optional: Email Configuration (for notifications)
# MAIL_URL=smtps://username:password@smtp.gmail.com:465/
# SETTING_From_Email=noreply@yourdomain.com

# Optional: Jitsi Meet Integration (for video calls)
# SETTING_Jitsi_Enabled=true
# SETTING_Jitsi_Domain=meet.jit.si
# SETTING_Jitsi_URL_Room_Prefix=RocketChat

# Optional: Performance Tuning
# SETTING_API_Rate_Limiter_Limit_Time_Ms=60000
# SETTING_API_Rate_Limiter_Limit_Calls_Default=10
